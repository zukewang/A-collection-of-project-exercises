<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:toolbarId="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleX="0.5"
                    android:scaleY="0.5"
                    android:src="@drawable/back"
                    android:tint="#000" />

                <TextView
                    android:id="@+id/info_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:text="我的信息"
                    android:textColor="#000"
                    android:textSize="20sp" />
            </LinearLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:gravity="center"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="110dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="70dp"
                        android:layout_height="70dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/myavatar"
                            android:src="@drawable/fczlm"
                            android:layout_marginLeft="10dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp" />
                        <ImageView
                            android:id="@+id/isshowrz"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@drawable/rz_gr"
                            android:layout_width="25dp"
                            android:layout_height="25dp" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            android:id="@+id/my_name"
                            android:textColor="#000"
                            android:textSize="23sp"
                            android:textStyle="bold"
                            android:text="username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/my_level"
                                android:tint="#fc5c00"
                                android:src="@drawable/l9"
                                android:layout_width="40dp"
                                android:layout_height="30dp" />

                            <ImageView
                                android:id="@+id/my_gender"
                                android:src="@drawable/man"
                                android:layout_width="30dp"
                                android:layout_height="22dp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!--关注或者编辑资料的按钮还有二维码按钮-->
                    <Button
                        android:id="@+id/focus"
                        android:visibility="gone"
                        android:textColor="#f2c201"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:background="@drawable/shape_focus"
                        android:text="关注"
                        android:layout_width="80dp"
                        android:layout_height="35dp" />
                    <Button
                        android:id="@+id/editmyinfo"
                        android:visibility="gone"
                        android:textColor="#f2c201"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:background="@drawable/shape_focus"
                        android:text="编辑资料"
                        android:layout_width="80dp"
                        android:layout_height="35dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/rz_gr"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:textColor="#0004ff"
                            android:textStyle="bold"
                            android:text="个人认证："
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                        <TextView
                            android:gravity="center_vertical"
                            android:textSize="18sp"
                            android:textColor="#0004ff"
                            android:textStyle="bold"
                            android:text="优秀用户"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="#0004ff"
                        android:textStyle="bold"
                        android:text="192.6W"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:text="粉丝"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="#0004ff"
                        android:textStyle="bold"
                        android:text="83"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:text="关注"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                </LinearLayout>


                <!--<LinearLayout-->
                    <!--android:orientation="horizontal"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="40dp">-->
                    <!--<ImageView-->
                        <!--android:src="@drawable/left_start"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="40dp" />-->
                    <!--<TextView-->
                        <!--android:gravity="center_vertical"-->
                        <!--android:textSize="18sp"-->
                        <!--android:textColor="#0004ff"-->
                        <!--android:textStyle="bold"-->
                        <!--android:text="签名"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="40dp" />-->
                <!--</LinearLayout>-->

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/mynickname"
                        android:layout_marginLeft="20dp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="加载中..."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <com.het.smarttab.SmartTabLayout
                android:layout_height="48dp"
                android:layout_width="match_parent"
                android:id="@+id/myinfotab"
                android:background="@drawable/shape_myinfo"
                app:stl_underlineThickness="1px"
                app:stl_underlineColor="@color/color_e5"
                app:stl_indicatorWithoutPadding="true"
                app:stl_indicatorThickness="2dp"
                app:stl_indicatorInterpolation="linear"
                app:stl_indicatorColor="@color/blue"
                app:stl_dividerColor="@color/transparent"
                app:stl_distributeEvenly="true"
                app:stl_defaultTabTextSize="20sp"
                app:stl_defaultTabTextHorizontalPadding="5dp"
                app:stl_defaultTabTextColor="#ffffff"
                android:clipToPadding="false"/>

                <android.support.v4.view.ViewPager
                    android:id="@+id/myinfovp"
                    android:layout_width="match_parent"
                    android:layout_height="580dp"/>
        </LinearLayout>




    </android.support.v4.widget.NestedScrollView>

    <!--<android.support.design.widget.FloatingActionButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="bottom|end"-->
        <!--android:layout_margin="16dp"-->
        <!--android:clickable="true"-->
        <!--android:src="@android:drawable/ic_input_add" />-->
</android.support.design.widget.CoordinatorLayout>